{
  "parser": "babel-eslint",
  "extends": "appfolio-react",
  "rules": {
    "function-paren-newline": 0,
    "import/newline-after-import": 1,
    "jsx-a11y/click-events-have-key-events": 1, // TODO Remove this when warnings are addressed
    "jsx-a11y/interactive-supports-focus": 1, // TODO Remove this when warnings are addressed
    "jsx-a11y/no-static-element-interactions": 1, // TODO Remove this when warnings are addressed
    "jsx-a11y/no-noninteractive-element-interactions": 1, // TODO Remove this when warnings are addressed
    "max-len": 0,
    "no-confusing-arrow": 0,
    "no-nested-ternary": 0,
    "react/no-array-index-key": 1, // TODO Remove this when warnings are addressed
    "react/no-find-dom-node": 1, // TODO Remove this when warnings are addressed
    "react/prefer-stateless-function": 0,
    "react/prop-types": 1,
    "react/sort-comp": [1, {
      "order": [
        "propTypes",
        "defaultProps",
        "static-methods",
        "state",
        "constructor",
        "everything-else",
        "lifecycle",
        "render"
      ]
    }],
    "require-jsdoc": 0
  }
}
