{
  "compilerOptions": {
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "baseUrl": ".",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "module": "ESNext",
    "moduleResolution": "Node",
    "noEmitOnError": true,
    "noEmit": true,
    "strict": true,
    "target": "ESNext",
    "skipLibCheck": true

  },
  "include": [
    "src",
    "./tooling/helpers.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
